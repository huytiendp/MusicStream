<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/blueDark">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/blueDark">

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Music Admin Dashboard"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:background="@color/pink"
        android:gravity="center" />

    <!-- Categories Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:padding="16dp"
        android:elevation="4dp"
        android:backgroundTint="@color/blueDark2"
        android:backgroundTintMode="src_atop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your music categories here."
            android:textSize="14sp"
            android:textColor="@color/textlyric"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Manage Categories"
            android:backgroundTint="@color/pink"
            android:textColor="#fff" />
    </LinearLayout>

    <!-- Sections Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:padding="16dp"
        android:elevation="4dp"
        android:backgroundTint="@color/blueDark2"
        android:backgroundTintMode="src_atop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sections"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organize your sections within categories."
            android:textSize="14sp"
            android:textColor="@color/textlyric"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnSections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Manage Sections"
            android:backgroundTint="@color/pink"
            android:textColor="#fff" />
    </LinearLayout>

    <!-- Songs Section -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:backgroundTint="@color/blueDark2"
        android:backgroundTintMode="src_atop"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Songs"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Manage and add songs to the library."
            android:textColor="@color/textlyric"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/pink"
            android:text="Manage Songs"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:padding="16dp"
        android:elevation="4dp"
        android:backgroundTint="@color/blueDark2"
        android:backgroundTintMode="src_atop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reports"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Report to the library."
            android:textSize="14sp"
            android:textColor="@color/textlyric"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnReports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Manage Reports"
            android:backgroundTint="@color/pink"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:padding="16dp"
        android:elevation="4dp"
        android:backgroundTint="@color/blueDark2"
        android:backgroundTintMode="src_atop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage user to the library."
            android:textSize="14sp"
            android:textColor="@color/textlyric"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Manage Users"
            android:backgroundTint="@color/pink"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
</ScrollView>
