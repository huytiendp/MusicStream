<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar for Back Button -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <EditText
            android:id="@+id/editSongTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề bài hát"
            android:textColor="@color/white"
            android:textColorHint="@color/textlyric"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editSongSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phụ đề bài hát"
            android:textColor="@color/white"
            android:textColorHint="@color/textlyric"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editSongUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL bài hát"
            android:textColor="@color/white"
            android:textColorHint="@color/textlyric"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editSongCoverUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL bìa bài hát"
            android:textColor="@color/white"
            android:textColorHint="@color/textlyric"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editSongLyrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lời bài hát"
            android:textColor="@color/white"
            android:textColorHint="@color/textlyric"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editSongSingerUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL ca sĩ"
            android:textColor="@color/white"
            android:textColorHint="@color/textlyric"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editSongDetailSinger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chi tiết ca sĩ"
            android:textColor="@color/white"
            android:textColorHint="@color/textlyric"
            android:textSize="18sp" />

        <Button
            android:id="@+id/saveSongButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/pink"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
